
<% layout("./layouts/boilerplate") %>
<h1 class="text-center">Create a new PeopleThank</h1>
<div class="col-6 offset-3">
	<h2>new.ejs</h2>

    
	<!-- <div>
		<a href="/peoplethank">Go back to all the Thanked People</a>
