	<form class="needs-validation" action="/peoplethank" method="POST" novalidate>
	
	
	<div class="mb-3">
		<label class="form-label" for="name">PeopleThank Name</label>
		<!-- we are using the square brackets in the name so that we can easily send data to our mongoose method without reformatting the body. -->
		<input class="form-control" type="text" id="name" name="peoplethank[name]" required>
	</div>
	<div class="mb-3">
		<label class="form-label" for="description">Discription </label>
		<input class="form-control" type="text" id="description" name="peoplethank[description]" required>
	</div>
		    
	<div class="mb-3">
		<label class="form-label" for="image">Choose Image</label>
		<input class="form-control" type="text" id="image" name="peoplethank[image]" required>
	</div>
	<div class="mb-3">
		<label class="form-label" for="resonation">Resonation</label>
		<input class="form-control" type="text" id="resonation" name="peoplethank[resonation]" required>
	</div>
	
	<div class="mb-3">
		<label class="form-label" for="company">Choose company</label>
		<input class="form-control" type="text" id="company" name="peoplethank[company]" required>	
	
	</div>

